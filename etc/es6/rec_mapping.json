{
    "settings": {
        "index": {
            "number_of_replicas": 0,
            "number_of_shards": 1,
            "analysis": {
                "filter": {
                    "autocomplete": {
                        "type": "edge_ngram",
                        "min_gram": 1,
                        "max_gram": 20
                    }
                },
                "analyzer": {
                    "autocomplete": {
                        "type": "custom",
                        "tokenizer": "standard",
                        "filter": [
                            "lowercase",
                            "autocomplete"
                        ]
                    }
                }
            }
        }
    },
    "mappings": {
        "_doc": {
            "dynamic": false,
            "properties": {
                "ac": {
                    "type": "text",
                    "analyzer": "autocomplete",
                    "search_analyzer": "standard"
                },
                "id": {
                    "type": "keyword"
                },
                "collection": {
                    "type": "keyword"
                },
                "type": {
                    "type": "keyword"
                },
                "title": {
                    "type": "text",
                    "copy_to": "ac"
                },
                "author": {
                    "properties": {
                        "name": {
                            "type": "text"
                        }
                    }
                },
                "abstract": {
                    "properties": {
                        "lang": {
                            "type": "keyword"
                        },
                        "text": {
                            "type": "text"
                        }
                    }
                },
                "edition": {
                    "enabled": "false"
                },
                "publisher": {
                    "type": "text"
                },
                "placeOfPublication": {
                    "type": "text"
                },
                "publicationDate": {
                    "type": "text"
                },
                "doi": {
                    "type": "keyword"
                },
                "isbn": {
                    "type": "keyword"
                },
                "note": {
                    "properties": {
                        "lang": {
                            "type": "keyword"
                        },
                        "text": {
                            "type": "text"
                        }
                    }
                }
            }
        }
    }
}