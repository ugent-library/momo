{
    "settings": {
        "index": {
            "number_of_replicas": 0,
            "number_of_shards": 1,
            "analysis": {
                "tokenizer": {
                    "ngram": {
                        "type": "edge_ngram",
                        "min_gram": 1,
                        "max_gram": 20,
                        "token_chars": [
                            "letter"
                        ]
                    }
                },
                "analyzer": {
                    "ngram": {
                        "tokenizer": "ngram",
                        "filter": [
                            "lowercase"
                        ]
                    },
                    "lowercase": {
                        "tokenizer": "lowercase"
                    }
                }
            }
        }
    },
    "mappings": {
        "_doc": {
            "dynamic": false,
            "properties": {
                "id": {
                    "type": "keyword"
                },
                "collection": {
                    "type": "keyword"
                },
                "type": {
                    "type": "keyword"
                },
                "createdAt": {
                    "type": "date"
                },
                "updatedAt": {
                    "type": "date"
                },
                "metadata": {
                    "type": "object",
                    "properties": {
                        "title": {
                            "type": "text",
                            "fields": {
                                "ngram": {
                                    "type": "text",
                                    "analyzer": "ngram",
                                    "search_analyzer": "lowercase"
                                }
                            }
                        },
                        "author": {
                            "properties": {
                                "name": {
                                    "type": "text"
                                }
                            }
                        },
                        "abstract": {
                            "properties": {
                                "lang": {
                                    "type": "keyword"
                                },
                                "text": {
                                    "type": "text"
                                }
                            }
                        },
                        "edition": {
                            "type": "text"
                        },
                        "publisher": {
                            "type": "text"
                        },
                        "placeOfPublication": {
                            "type": "text"
                        },
                        "publicationDate": {
                            "type": "text"
                        },
                        "identifier": {
                            "type": "keyword"
                        },
                        "doi": {
                            "type": "keyword"
                        },
                        "isbn": {
                            "type": "keyword"
                        },
                        "note": {
                            "properties": {
                                "lang": {
                                    "type": "keyword"
                                },
                                "text": {
                                    "type": "text"
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}